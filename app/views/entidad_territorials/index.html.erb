<script>
$(document).ready(function() {
    $('#table_index').dataTable( {
    	"bJQueryUI": true,
        "sPaginationType": "full_numbers"
    } );
} );
</script>
<div class="wrapper">
	<div class="content">
		<div class="form_wrapper">
			<h3>Entidades territoriales</h3>
			<center>
				<table id="table_index">
				  <thead>
				    <tr>
				      <th>Nombre Oficial</th>
				      <th>Presentacion</th>
				      <th>Padre</th>
				      <th>Nivel</th>
				      <th>Region</th>
				      <th></th>
				      <th></th>
				    </tr>
				  </thead>
				
				  <tbody>
				    <% @entidad_territorials.each do |entidad_territorial| %>
				      <tr>
				        <td><%= link_to entidad_territorial.enter_nombre_oficial, entidad_territorial %></td>
				        <td><%= entidad_territorial.enter_presentacion %></td>
				        <td><%= entidad_territorial.enter_padre %></td>
				        <td><%= entidad_territorial.enter_nivel %></td>
				        <% unless entidad_territorial.region.nil? %>
				        	<td><%= entidad_territorial.region.reg_nombre %></td>
				        <% else%>
				        	<td>&nbsp;</td>
				        <% end %>
				        <td><%= link_to 'Editar', edit_entidad_territorial_path(entidad_territorial), class: "cmd edit" %></td>
				        <td><%= link_to 'Borrar', entidad_territorial, method: :delete, data: { confirm: '¿Está seguro de eliminar este registro?' }, class: "cmd delete" %></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>
				</center>
			
			<div class="bottom">
				<%= link_to 'Crear entidad territorial', new_entidad_territorial_path, class: "cmd add", id: :cmd_crear %>
			</div>
		</div>
	</div>
</div>