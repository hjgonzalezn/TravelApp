
<%= form_for(@parametro_sistema) do |f| %>
  <% if @parametro_sistema.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@parametro_sistema.errors.count, "error") %> prohibited this parametro_sistema from being saved:</h2>

      <ul>
      <% @parametro_sistema.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form_fields">
	  <div class="field">
	    <%= f.label :Categoría %><br>
	    <%= f.text_field :psis_categoria %>
	  </div>
	  <div class="field">
	    <%= f.label :Código %><br>
	    <%= f.text_field :psis_codigo %>
	  </div>
	  <div class="field">
	    <%= f.label :Valor %><br>
	    <%= f.text_field :psis_valor %>
	  </div>
	  <div class="field">
	    <%= f.label :Descripción %><br>
	    <%= f.text_field :psis_descripcion, size: 60, maxlength:50 %>
	  </div>
	  <div class="field">
	    <%= f.label :Estado_registro %><br>
	    <%= f.text_field :psis_estado_registro %>
	  </div>
	</div>
	
	<div class="bottom">
  		<div class="actions">
    		<% if action_name == "edit"%>
				<%= f.submit "Aceptar", class: "cmd save", id: :cmd_aceptar %> |
				<%= link_to 'Consultar', @control, class: "cmd star", id: :cmd_consultar %> |
			<% elsif action_name == "new" or action_name =="create" %>
				<script>
					$(function(){
						$("#cmd_aceptar")
						.click(function(){
							$('#new_parametro_sistema').submit();
						});
					});
				</script>
				<%= link_to "Aceptar", nil, class: "cmd save", id: :cmd_aceptar %> |
			<% end %>
			<%= link_to 'Regresar', parametro_sistemas_url, class: "cmd previous", id: :cmd_regresar %>
  		</div>
  	</div>
  	
<% end %>
