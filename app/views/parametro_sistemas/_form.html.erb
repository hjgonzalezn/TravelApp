
<%= form_for(@parametro_sistema) do |f| %>
  <% if @parametro_sistema.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@parametro_sistema.errors.count, "error", "errores") %> no permite(n) que este registro sea grabado:</h2>

      <ul>
      <% @parametro_sistema.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form_fields">
	  <div class="field">
	    <%= f.label :Categoría %><br>
	    <%= f.text_field :psis_categoria, options={size:40, maxlength:40, required: :required, autofocus: :autofocus, "data-validation" => "length alphanumeric", "data-validation-allowing" => " ", "data-validation-length" => "min3"} %>
	  </div>
	  <div class="field">
	    <%= f.label :Código %><br>
	    <%= f.text_field :psis_codigo, options={size: 5, maxlength:5, required: :required, "data-validation" => "length alphanumeric", "data-validation-length" => "min3"} %>
	  </div>
	  <div class="field">
	    <%= f.label :Valor %><br>
	    <%= f.text_field :psis_valor, options={size:50, maxlength:50, required: :required, "data-validation" => "length alphanumeric", "data-validation-allowing" => " :/.-_", "data-validation-length" => "min1"} %>
	  </div>
	  <div class="field">
	    <%= f.label :Descripción %><br>
	    <%= f.text_field :psis_descripcion, options={size:50, maxlength:50, required: :required, "data-validation" => "length alphanumeric", "data-validation-allowing" => " ", "data-validation-length" => "min5"} %>
	  </div>
	  <div class="field">
	    <%= f.label :Estado_registro %><br>
	    <%= f.text_field :psis_estado_registro , options= {maxlength:1, required: :required, "data-validation" => "length alphanumeric", "data-validation-length" => "min1"} %>
	  </div>
	</div>
	
	<div class="bottom">
  		<div class="actions">
    		<% if action_name == "edit"%>
				<%= f.submit "Aceptar", class: "cmd save", id: :cmd_aceptar %> |
				<%= link_to 'Consultar', @control, class: "cmd star", id: :cmd_consultar %> |
			<% elsif action_name == "new" or action_name =="create" %>
				<script>
					$(function(){
						$("#cmd_aceptar")
						.click(function(){
							$('#new_parametro_sistema').submit();
						});
					});
				</script>
				<%= link_to "Aceptar", nil, class: "cmd save", id: :cmd_aceptar %> |
			<% end %>
			<%= link_to 'Regresar', parametro_sistemas_path, class: "cmd previous", id: :cmd_regresar %>
  		</div>
  	</div>
<% end %>
<script> $.validate();</script>
