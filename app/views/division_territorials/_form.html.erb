<%= form_for(@division_territorial) do |f| %>
  <% if @division_territorial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@division_territorial.errors.count, "error", "errores") %> no permite(n) que este registro sea grabado: </h2>

      <ul>
      <% @division_territorial.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
		<div class="form_fields">
			  <div class="field">
			    <%= f.label :dvt_nombre, "Nombre *" %><br>
			    <%= f.text_field :dvt_nombre, options= {size: 50, maxlength: 50} %>
			  </div>
			  <div class="field">
			    <%= f.label :dvt_estado_registro, "Estado registro *" %><br>
			    <%= f.text_field :dvt_estado_registro %>
			  </div>
		</div>
  	<div class="bottom">
  		<div class="actions">
    		<% if action_name == "edit"%>
				<%= f.submit "Aceptar", class: "cmd save", id: :cmd_aceptar %> |
				<%= link_to 'Consultar', @division_territorial, class: "cmd star", id: :cmd_consultar %> |
			<% elsif action_name == "new" or action_name =="create" %>
				<script>
					$(function(){
						$("#cmd_aceptar")
						.click(function(){
							$('#new_division_territorial').submit();
						});
					});
				</script>	
				<%= link_to "Aceptar", nil, class: "cmd save", id: :cmd_aceptar %> |
			<% end %>
			<%= link_to 'Regresar', division_territorials_path, class: "cmd previous", id: :cmd_regresar %>
  		</div>
  	</div>
	
<% end %>
<script>$.validate();</script>