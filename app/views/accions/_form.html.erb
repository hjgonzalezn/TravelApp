<%= form_for(@accion) do |f| %>
  <% if @accion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@accion.errors.count, "error", "errores") %> no permite(n) que este registro sea grabado: </h2>

      <ul>
      <% @accion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="form_fields">
  		<div class="field">
    		<%= f.label :Codigo, "CÃ³digo" %><br>
    		<%= f.text_field :acc_codigo, size:10, maxlength:5 %>
  		</div>
  		<div class="field">
    		<%= f.label :Nombre %><br>
    		<%= f.text_field :acc_nombre, size:50, maxlength:50 %>
  		</div>
  		<div class="field">
    		<%= f.label :Estado_registro %><br>
