<script>
$(document).ready(function() {
    $('#table_index').dataTable( {
    	"bJQueryUI": true,
        "sPaginationType": "full_numbers"
    } );
} );
</script>

<div class="wrapper">
	<div class="content">
		<div class="form_wrapper">
			<h3>Divisiones territoriales</h3>
			<center>
				<br/>
				<table id="table_index">
				  <thead>
				    <tr>
				      <th>Entidad territorial</th>
				      <th>Division territorial</th>
				      <th>Nivel</th>
				      <th>Estado registro</th>
				      <th></th>
			      	  <th></th>
				    </tr>
				  </thead>
				
				  <tbody>
				    <% @division_territorial_pais.each do |div_terr_pais| %>
				      <tr>
				        <td><%= div_terr_pais.entidad_territorial.enter_nombre_oficial %></td>
				        <td><%= link_to div_terr_pais.division_territorial.dvt_nombre, div_terr_pais %></td>
				        <td><%= div_terr_pais.dte_nivel %></td>
				        <td><%= div_terr_pais.dte_estado_registro %></td>
				        <td><%= link_to 'Editar', edit_division_territorial_pai_path(div_terr_pais), class: "cmd edit" %></td>
				        <td><%= link_to 'Borrar', div_terr_pais, method: :delete, data: { confirm: '¿Está seguro de eliminar este registro?' }, class: "cmd delete" %></td>
				      </tr>
				    <% end %>
				  </tbody>
  				</table>
			</center>
			<div class="bottom">
				<%= link_to 'Crear division territorial', new_division_territorial_pai_path, class: "cmd add", id: :cmd_crear %>
			</div>
		</div>
	</div>
</div>
