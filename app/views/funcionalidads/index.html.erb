<style>
	  table.dataTable tbody td:nth-child(1){
  width:60%;
  }
    table.dataTable tbody td:nth-child(2){
  width:10%;
  }
    table.dataTable tbody td:nth-child(3){
  width:15%;
  }
    table.dataTable tbody td:nth-child(4){
  width:15%;
  }
</style>
<script>
$(document).ready(function() {
    $('#table_index').dataTable( {
    	"bJQueryUI": true,
        "sPaginationType": "full_numbers"
    } );
} );
</script>

<div class="wrapper">
	<div class="content">
		<div class="form_wrapper">
			<h3>Funcionalidades</h3>
			<center>
				<br/>
				<table id="table_index">
  					<thead>
    					<tr>
      						<th>Descripci&oacute;n</th>
      						<th>P&uacute;blica</th>
      						<th></th>
      						<th></th>
   						</tr>
  					</thead>
  					<tbody>
    					<% @funcionalidads.each do |funcionalidad| %>
      						<tr>
        						<td><%= link_to funcionalidad.func_descripcion, funcionalidad %></td>
        						<%if funcionalidad.func_publica == "S" then %>
        							<td>SI</td>
        						<% else %>
        							<td>NO</td>
        						<% end %>
        						
        						<td><%= link_to 'Editar', edit_funcionalidad_path(funcionalidad), class: "cmd edit", id: :cmd_editar %></td>
        						<td><%= link_to 'Borrar', funcionalidad, method: :delete, data: { confirm: '¿Está seguro de eliminar este registro?' }, class:"cmd delete", id: :cmd_borrar %></td>
      						</tr>
    					<% end %>
  					</tbody>
				</table>

				<br>
			</center>
			<div class="bottom">
				<%= link_to 'Crear funcionalidad', new_funcionalidad_path, class: "cmd add", id: :cmd_crear %>
			</div>
		</div>
	</div>
</div>